FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir openai python-dotenv

# Copy scripts
COPY scripts/batch_translate_parallel.py /app/scripts/batch_translate_parallel.py
COPY scripts/merge_translations.py /app/scripts/merge_translations.py

# Output directory will be mounted as volume
RUN mkdir -p /app/output

ENTRYPOINT ["python", "/app/scripts/batch_translate_parallel.py"]
